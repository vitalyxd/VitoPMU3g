<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElektricnaOtpornost">

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/Izracun"
        android:text="Izracun"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Otpornost"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        />

    <EditText
        android:id="@+id/Otpornost"
        android:hint="Unesite otpornost"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        />

    <EditText
        android:id="@+id/Duljina"
        android:hint="Unesite duljinu vodica"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Otpornost"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        />

    <EditText
        android:id="@+id/PovrsinaPoprecnogPresjeka"
        android:hint="Unesite povrsinu poprecnog presjeka"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Otpornost"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"

        />
    <TextView
        android:id="@+id/Rezultat"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/Izracun"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>